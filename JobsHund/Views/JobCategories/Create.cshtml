@model jobhundClassLibrary1.JobCategory

@{
    ViewBag.Title = "New";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-5 col-md-5">
            <h3 class="mb-30">New Category   </h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mt-4">

                    @Html.EditorFor(model => model.JobCategory1, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control single-input",
                       @name = "first_name",
                       @placeholder = "Enter Category",
                       @onfocus = "this.placeholder = ''",
                       @onblur = "this.placeholder = 'Enter Category'",
                       @required = "true"
                   }
               })
                    @Html.ValidationMessageFor(model => model.JobCategory1, "", new { @class = "text-danger" })

                </div>
                <div class="mt-4">

                    @Html.EditorFor(model => model.Description, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control single-input",
                       @name = "first_name",
                       @placeholder = "Enter Description",
                       @onfocus = "this.placeholder = ''",
                       @onblur = "this.placeholder = 'Enter Description'",
                       @required = "true"
                   }
               })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                </div>

                <div class="form-group mt-4">

                    <input type="submit" value="Save" class="genric-btn success" style="float:right;" />
                    @Html.ActionLink("Back to List", "Index", null, new { @Class = "genric-btn danger", @Style = "float:left;" })

                </div>

            }

            <div>

            </div>
        </div>
    </div>
</div>
